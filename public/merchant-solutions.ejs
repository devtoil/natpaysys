<div id="portal" class="container" style="padding: 100px;">
	<header class="major">
		<h2>Access One</h2>
	</header>

	<h3>Already have an account?</h3>
	<a href="http://www2.portfoliomanager.com" target="_blank" class="button">Login To Access One</a>

	<h3 style="margin: 30px 0;">Need an account?</h3>
	<form method="post" id="portal-registration-form" action="/doc-submit" enctype="multipart/form-data">
		<div class="row">
			<section class="12u">
				<div class="row">
					<div class="12u">
						<label for="">Username</label>
						<input name="username" type="text" class="text" />
					</div>
					<div class="12u">
						<label for="">Password</label>
						<input name="password" type="text" class="text" />
					</div>
				</div>
				<p>An email will be sent to you after your account has been created.</p>
			</section>
			<section class="12u">
				<div class="row">
					<div class="12u text-center">
						<button type="submit" href="#" id="portal-form-submit" class="button submit-button">Send</button>
					</div>
				</div>
			</section>
		</div>
	</form>		
</div>

<div id="pci" class="container" style="padding: 100px;">
	<header class="major">
		<h2>PCI Rapid Compliance Login</h2>
		<a href="" class="button" style="margin-top: 50px;">Go to Login</a>
	</header>
</div>

<div id="doc-submit" class="container" style="padding: 100px;">
	<header class="major">
		<h2>Upload Documents</h2>
	</header>
	<form method="post" id="doc-submit-form" action="/doc-submit" enctype="multipart/form-data">
		<div class="row">
			<section class="12u">
				<div class="row">
					<div class="12u">
						<label for="">Company Name</label>
						<input name="company" type="text" class="text" />
					</div>
					<div class="12u">
						Upload a copy of your most recent processing statement
						<input name="document" type="file" class="text" />
					</div>
				</div>
			</section>
			<section class="12u">
				<div class="row">
					<div class="12u text-center">
						<button type="submit" href="#" id="doc-form-submit" class="button submit-button">Send</button>
					</div>
				</div>
			</section>
		</div>
	</form>		
</div>
